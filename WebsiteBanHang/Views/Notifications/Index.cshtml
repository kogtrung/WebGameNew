@model IEnumerable<WebGame.Controllers.UnifiedNotificationViewModel>
@{
    ViewData["Title"] = "Your Notifications";
}

<div class="container mt-4">
    <h2>Your Notifications</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no notifications.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var n in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center @(n.IsRead ? "" : "list-group-item-warning")">
                    <div>
                        <span class="badge bg-secondary me-2">@n.Type</span>
                        @n.Message
                        @if (!string.IsNullOrEmpty(n.Link))
                        {
                            <a href="@n.Link" class="ms-2 btn btn-sm btn-outline-primary">View</a>
                        }
                    </div>
                    <small>@n.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            }
        </div>
    }
</div> 