@{
    ViewData["Title"] = "Submit Score";
    int gameId = ViewBag.GameId;
}
<style>
    input[type="number"] {
        color: #111 !important;
        background: #fff;
    }
</style>
<div class="container mt-4">
    <h2>Submit Your Score</h2>
    <form asp-action="SubmitScore" method="post">
        <input type="hidden" name="gameId" value="@gameId" />
        <div class="mb-3">
            <label for="score" class="form-label">Score</label>
            <input type="number" class="form-control" id="score" name="score" min="0" max="1000000" required style="color:#111;background:#fff;" />
        </div>
        <div class="mb-3">
            <label for="playTime" class="form-label">Play Time (minutes)</label>
            <input type="number" class="form-control" id="playTime" name="playTime" min="0" max="100000" required style="color:#111;background:#fff;" />
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="@Url.Action("Index", new { gameId = gameId })" class="btn btn-secondary">Back</a>
    </form>
</div> 