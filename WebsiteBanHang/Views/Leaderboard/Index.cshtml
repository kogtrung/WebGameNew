@model IEnumerable<WebGame.Models.LeaderboardEntry>
@{
    var game = ViewBag.Game as WebGame.Models.Game;
    ViewData["Title"] = $"Leaderboard for {game?.Title}";
}
<div class="container mt-4">
    <h2>Leaderboard for <span class="text-primary">@game?.Title</span></h2>
    <div class="d-flex justify-content-end mb-3">
        @if (User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("SubmitScore", new { gameId = game.Id })" class="btn btn-primary">Submit Score</a>
        }
    </div>
    <div class="alert alert-info mb-3">
        <b>Note:</b> <br />
        <ul class="mb-0">
            <li><b>Game Score</b> (bên dưới) là điểm thành tích thực tế bạn đạt được trong game (ví dụ: điểm cao nhất, fastest time, số lần thắng, v.v.).</li>
            <li><b>User Rating</b> (ở phần Review) là điểm bạn chấm cho game này dựa trên cảm nhận cá nhân, dùng để tính điểm trung bình cộng đồng.</li>
        </ul>
    </div>
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Rank</th>
                <th>User</th>
                <th>Game Score</th>
                <th>Play Time (min)</th>
                <th>Last Update</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="5" class="text-center">No entries yet.</td></tr>
            }
            else
            {
                int rank = 1;
                foreach (var entry in Model)
                {
                    <tr>
                        <td>@rank</td>
                        <td>@entry.User?.UserName</td>
                        <td>@entry.Score</td>
                        <td>@entry.PlayTime</td>
                        <td>@entry.LastUpdate.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    rank++;
                }
            }
        </tbody>
    </table>
</div> 