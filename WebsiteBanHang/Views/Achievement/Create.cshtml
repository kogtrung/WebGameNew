@model WebGame.Models.Achievement
@{
    ViewData["Title"] = "Add Achievement";
    int gameId = ViewBag.GameId;
}
<style>
    input.form-control, textarea.form-control {
        color: #111 !important;
        background: #fff;
    }
    input.form-control::placeholder {
        color: #888;
    }
</style>
<div class="container mt-4">
    <h2>Add Achievement</h2>
    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger">
            <ul>
            @foreach (var err in (List<string>)ViewBag.Errors)
            {
                <li>@err</li>
            }
            </ul>
        </div>
    }
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GameId" value="@gameId" />
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IconUrl" class="form-label">Icon URL</label>
            <input asp-for="IconUrl" class="form-control" />
            <span asp-validation-for="IconUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Points" class="form-label"></label>
            <input asp-for="Points" class="form-control" type="number" min="0" value="0" required />
            <span asp-validation-for="Points" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConditionType" class="form-label">Condition Type</label>
            <input asp-for="ConditionType" class="form-control" placeholder="e.g. Score, PlayTime, Level, ..." required />
            <span asp-validation-for="ConditionType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConditionValue" class="form-label">Condition Value</label>
            <input asp-for="ConditionValue" class="form-control" type="number" min="1" value="1" required />
            <span asp-validation-for="ConditionValue" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsSecret" class="form-label">Is Secret?</label>
            <input asp-for="IsSecret" class="form-check-input" type="checkbox" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" type="number" min="0" value="0" />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
        <a href="@Url.Action("Index", new { gameId = gameId })" class="btn btn-secondary">Back</a>
    </form>
</div> 