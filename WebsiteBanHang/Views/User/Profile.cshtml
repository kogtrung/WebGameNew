@model WebGame.Models.ApplicationUser
@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height:60vh;">
    <div class="card shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-header bg-dark text-white text-center">
            <i class="fas fa-user-circle fa-3x mb-2"></i>
            <h3 class="mb-0">Thông tin cá nhân</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4"><i class="fas fa-signature me-2 text-secondary"></i>Họ tên</dt>
                <dd class="col-sm-8">@Model.FullName</dd>
                <dt class="col-sm-4"><i class="fas fa-calendar-alt me-2 text-secondary"></i>Năm sinh</dt>
                <dd class="col-sm-8">@Model.YearOfBirth</dd>
                <dt class="col-sm-4"><i class="fas fa-phone me-2 text-secondary"></i>Số điện thoại</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>
                <dt class="col-sm-4"><i class="fas fa-envelope me-2 text-secondary"></i>Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
                <dt class="col-sm-4"><i class="fas fa-map-marker-alt me-2 text-secondary"></i>Địa chỉ</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-center">
            <a class="btn btn-outline-warning px-4 profile-edit-btn" href="@Url.Action("EditProfile", "User")">
                <i class="fas fa-edit me-1"></i>Chỉnh sửa thông tin
            </a>
        </div>
    </div>
</div>
@section Styles {
<style>
    .profile-edit-btn {
        color: #212529 !important;
        border-width: 2px;
        box-shadow: none;
        transition: box-shadow 0.2s;
    }
    .profile-edit-btn:hover, .profile-edit-btn:focus {
        color: #212529 !important;
        background: #fff !important;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        border-color: #ff4081;
    }
</style>
} 