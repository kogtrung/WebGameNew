@model IEnumerable<WebGame.Models.GameComparison>

@{
    ViewData["Title"] = "Bảng so sánh Game";
}

<div class="container mt-4">
    <h1 class="mb-4">Bảng so sánh của bạn</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo bảng so sánh mới</a>
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var comparison in Model)
            {
                <a href="@Url.Action("Details", new { id = comparison.Id })"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@comparison.Name</h5>
                        <small class="text-muted">Tạo lúc: @comparison.CreatedAt.ToString("g") - Cập nhật cuối: @comparison.LastUpdated?.ToString("g")</small>
                    </div>
                    @if (comparison.IsPublic)
                    {
                        <span class="badge bg-info">Công khai</span>
                    }
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Bạn chưa có bảng so sánh nào. Hãy tạo một bảng mới để bắt đầu so sánh game! 
        </div>
    }
</div> 