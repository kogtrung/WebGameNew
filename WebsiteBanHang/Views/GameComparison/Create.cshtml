@model WebGame.Models.GameComparison

@{
    ViewData["Title"] = "Tạo bảng so sánh mới";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">Tạo bảng so sánh mới</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên bảng so sánh</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="IsPublic" />
                            <label class="form-check-label" asp-for="IsPublic">Công khai</label>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">Tạo bảng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 